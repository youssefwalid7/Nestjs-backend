{
	"name": "elchai-backend",
	"version": "0.0.1",
	"description": "",
	"author": "Youssef Walid",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
		"lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"typeorm": "ts-node -r tsconfig-paths/register ./src/config/typeorm.cli.ts",
		"migration:create": "yarn run typeorm migration:create",
		"migration:generate": "yarn run typeorm migration:generate",
		"migration:revert": "yarn run typeorm migration:revert"
	},
	"dependencies": {
		"@aws-sdk/client-cognito-identity-provider": "^3.675.0",
		"@aws-sdk/client-s3": "^3.686.0",
		"@aws-sdk/client-ses": "^3.675.0",
		"@aws-sdk/s3-request-presigner": "^3.686.0",
		"@nestjs/common": "^10.4.9",
		"@nestjs/config": "3.3.0",
		"@nestjs/core": "^10.4.9",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.4.9",
		"@nestjs/swagger": "^7.4.2",
		"@nestjs/throttler": "^6.3.0",
		"@nestjs/typeorm": "^10.0.2",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"date-fns": "^4.1.0",
		"helmet": "^8.0.0",
		"isomorphic-dompurify": "^2.17.0",
		"jsonwebtoken": "^9.0.2",
		"jwks-rsa": "^3.1.0",
		"libphonenumber-js": "^1.11.15",
		"lodash": "^4.17.21",
		"nanoid": "^5.0.8",
		"nestjs-cls": "^4.4.1",
		"nestjs-i18n": "^10.5.0",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"pg": "^8.13.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "0.3.20",
		"typeorm-naming-strategies": "^4.1.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.4.8",
		"@nestjs/schematics": "^10.2.3",
		"@nestjs/testing": "^10.4.8",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9",
		"@types/lodash": "^4.17.13",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.10.0",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^8.16.0",
		"@typescript-eslint/parser": "^8.16.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"jest": "^29.7.0",
		"prettier": "^3.4.0",
		"prettier-plugin-organize-imports": "^4.1.0",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "test",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/../src/$1",
			"^@entities/(.*)$": "<rootDir>/../src/data-service/entities/$1",
			"^@repositories/(.*)$": "<rootDir>/../src/data-service/repositories/$1",
			"^@constants/(.*)$": "<rootDir>/../src/utilities/constants/$1",
			"^@decorators/(.*)$": "<rootDir>/../src/common/decorators/$1",
			"^@providers/(.*)$": "<rootDir>/../src/providers/$1",
			"^@mappers/(.*)$": "<rootDir>/../src/common/mappers/$1"
		}
	},
	"packageManager": "yarn@4.5.1"
}
